{
  "name": "in-between-web",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "sync": "npm run build && node scripts/copy-firebase-config.js && npx cap sync",
    "ios": "npm run sync && npx cap open ios",
    "android": "npm run sync && node scripts/patch-android-splash.js && npx cap open android",
    "assets": "npx capacitor-assets generate --assetPath resources --iconBackgroundColor '#1a2a3a' --iconBackgroundColorDark '#1a2a3a' --splashBackgroundColor '#1a2a3a' --splashBackgroundColorDark '#1a2a3a'"
  },
  "dependencies": {
    "@capacitor-firebase/authentication": "^7.3.1",
    "@capgo/capacitor-updater": "^7.23.3",
    "firebase": "^11.2.0",
    "howler": "^2.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.0",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@capacitor/android": "^7.0.0",
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^7.0.0",
    "@capacitor/core": "^7.0.0",
    "@capacitor/ios": "^7.0.0",
    "@vitejs/plugin-react-swc": "^4.2.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-plugin-static-copy": "^3.1.4"
  }
}
